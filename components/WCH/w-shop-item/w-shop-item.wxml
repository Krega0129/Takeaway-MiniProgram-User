<!--components/WCH/w-shop-item/w-shop-item.wxml-->
<view class="cu-card article no-card margin-lr-xs margin-bottom-xs">
  <view class="cu-item">
    <view class="content">
      <image src="/assets/img/WCH/category/fast-food.png" mode="aspectFill" style="width: 200rpx; height: 6.4em" class="margin-top"></image>
      <view class="desc">
        <view class="title text-cut" style="font-size: 40rpx">{{storeName}}</view>
        <view class="text-gray margin-left"> 起送 ￥{{minPrice}}  配送 ￥{{sentPrice}}</view>
        <view>
          <view class="dp-in-bk text-cut bg-orange light margin-left" style="max-width: 380rpx">“ {{desc}} ”</view>
        </view>
      </view>
    </view>
  </view>
</view>
